# 生產環境配置

# 應用程式設定
VITE_APP_TITLE=廣清宮財務管理系統
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=專為宮廟設計的財務管理系統

# 環境設定
NODE_ENV=production
VITE_MODE=production

# API 設定
VITE_API_BASE_URL=https://api.guangqing-temple.com
VITE_API_TIMEOUT=10000

# 功能開關
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_CONSOLE=false
VITE_ENABLE_PERFORMANCE_MONITOR=false
VITE_ENABLE_ERROR_REPORTING=true

# 第三方服務
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_GOOGLE_ANALYTICS_ID=your-ga-id-here

# 安全設定
VITE_ENABLE_HTTPS=true
VITE_SECURE_COOKIES=true

# 快取設定
VITE_CACHE_VERSION=1.0.0
VITE_ENABLE_SERVICE_WORKER=true

# 部署設定
VITE_PUBLIC_PATH=/
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
